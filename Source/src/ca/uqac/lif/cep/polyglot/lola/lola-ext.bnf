<other>        := <window> | <mutator> | <box-call> ;

<box-call>          := ^\$[\w\d]+\(.*?\);

<window>            := win ( <func-name> , <name> , <number> ) ;
<mutator>           := convert <name> into <constant> ;

# Function names

<func-name>         := ^[\$\w\d]+;